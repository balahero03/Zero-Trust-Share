# AWS Backend Configuration
# Copy this file to .env.local and update with your AWS deployment values

# API Gateway URL (get this from CDK deployment output)
NEXT_PUBLIC_API_URL=https://your-api-gateway-url.amazonaws.com/prod

# CloudFront URL (get this from CDK deployment output)
NEXT_PUBLIC_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# AWS Region
AWS_REGION=us-east-1

# S3 Bucket Names (get these from CDK deployment output)
AWS_S3_FILE_BUCKET=zero-trust-files-your-account-your-region
AWS_S3_METADATA_BUCKET=zero-trust-metadata-your-account-your-region

# DynamoDB Table Names (get these from CDK deployment output)
AWS_DYNAMODB_METADATA_TABLE=ZeroTrustFileMetadata
AWS_DYNAMODB_SESSIONS_TABLE=ZeroTrustUserSessions

# JWT Secret (use a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Application URL
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Optional: AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
